{
  "include": ["./src/**/*.d.ts", "./src/**/*.ts", "./src/**/*.svelte"],
  "compilerOptions": {
    "noEmit": true,
    "target": "es2016",

    "module": "commonjs",

    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
