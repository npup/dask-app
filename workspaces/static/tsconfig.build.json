{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["./src/**/*.d.ts", "./src/**/*.ts", "./src/**/*.svelte"],
  "compilerOptions": {
    "noEmit": true,
    "target": "es2016",
    "module": "es6",
    "types": ["node", "svelte"],

    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  }
}
